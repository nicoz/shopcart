<% content_for :body do %>
  <div class="container-fluid">
    <div class="row">
      <%= render partial: '/administrators/main_side_bar', locals: { active: 'configuration' } %>
      <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <h1 class="page-header"><%= @title %></h1>
        
        <dl class="dl-horizontal">
          <dt>Logo</dt>
          <dd><%= image_tag @general.logo_url(:tiny).to_s, style: "background: black" if @general.logo? %></dd>
          <dt>Icono</dt>
          <dd><%= image_tag @general.icon_url(:icon).to_s, style: "background: black" if @general.icon? %></dd>
          <dt>Nombre</dt>
          <dd><%= @general.name %></dd>
          <dt>Titulo</dt>
          <dd><%= @general.title %></dd>
          <dt>Slogan</dt>
          <dd><%= @general.slogan %></dd>
        </dl>
        
        <p class="col-md-4 col-md-offset-1"><%= link_to "Editar configuracion", edit_general_path(@general), id: "editar" %></p>

      </div>
    </div>
  </div>
<% end %>

<form role="form" action="<%= field_type_path(field_type) %>" method="get">
  <% if field_type.field_type == 'list' %>
    <div class="form-group">
      <label for="text">Texto</label>
      <input type="text" class="form-control" id="text" name="text" placeholder="Texto", value="<%= params[:text] %>">
    </div>
  <% else %>
    <% if field_type.field_type == 'map' %>
      <div class="form-group">
        <label for="key">Clave</label>
        <input type="text" class="form-control" id="key" name="key" placeholder="Clave", value="<%= params[:key] %>">
      </div>
    <% end %>
  <% end %>
  <div class="checkbox">
    <label>
      <%= check_box_tag :inactive, 'on', params[:inactive] == 'on' %> Mostrar Eliminados
    </label>
  </div>
  <button type="submit" class="btn btn-default">Buscar</button>
</form>

<hr />

<% if field_type.field_type == 'list' %>
  <%= link_to new_field_type_field_posibility_path(field_type), class: "btn btn-lg btn-primary" do %>
    <span class="glyphicon glyphicon-plus"></span> Crear Valor
  <% end %>
<% end %>
<% if field_type.field_type == 'map' %>
  <%= link_to new_field_type_field_map_path(field_type), class: "btn btn-lg btn-primary" do %>
    <span class="glyphicon glyphicon-plus"></span> Crear Valor
  <% end %>
<% end %>

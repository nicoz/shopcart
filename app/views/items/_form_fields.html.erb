<label for="name">Nombre</label>
<%= attribute_tag(item, :name, params = {form: form, placeholder: "Nombre", type: "text", class: "form-control", validations: :all}) %>

<label for="image">Imagen</label>
<p><%= image_tag item.image_url(:small).to_s %></p>
<%= form.file_field :image %>

<div class="row">
  <div class="col-md-5">
    <%= form.submit "Confirmar", class: "btn btn-lg btn-primary" %>
  </div>
  <%= render partial: '/shared/back', locals: {path: ''} %>
</div>

<form role="form" action="<%= products_path(item.name) %>" method="get">
    <div class="row">
      <div class='form-group col-sm-6 col-md-6 col-lg-6'>
        <label for='search'>Texto de busqueda</label>
        <%= text_field_tag :search, params[:search], class: 'form-control' %>
      </div>
    </div>
  <div class="row">
    <div class='form-group col-sm-6 col-md-6 col-lg-6'>
      <div class="checkbox">
        <label>
          <%= check_box_tag :inactive, 'on', params[:inactive] == 'on' %> Mostrar Eliminados
        </label>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='form-group col-sm-6 col-md-6 col-lg-6'>
      <button type="submit" class="btn btn-default">Buscar</button>
    </div>
  </div>
</form>

<hr />

<%= link_to new_product_path(item.name), class: "btn btn-lg btn-primary" do %>
  <span class="glyphicon glyphicon-plus"></span> Crear <%= item.name %>
<% end %>

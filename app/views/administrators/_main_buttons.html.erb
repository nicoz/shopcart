<% counter = 0 %>
<% items.each do |item| %>
  <% if counter == 0 %>
    <div class="row placeholders">
  <% end %>
  <div class="col-xs-6 col-sm-3 placeholder">
    <img class="img-responsive" alt="<%= item.name %>" src="<%= item.image_url(:big_button) %>">
    <h4><%= link_to item.name.pluralize, products_path(item.name) %></h4>
    <span class="text-muted">Administracion de <%= item.name.pluralize %></span>
  </div>
  <% if counter == 3 %>
    </div>
  <% end %>
  <% counter = counter == 3 ? 0 : counter + 1 %>
<% end %>
<% if counter < 3 %>
  </div>
<% end %>


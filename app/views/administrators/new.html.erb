<% content_for :navigation do %>
  <%= installation_navigation_bar("", "active", "") %>
<% end %>

<% content_for :body do %>
  <div id="new_administrator">
    <h1 class="cover-heading"><%= @title %></h1>
    <% if !@administrator.errors.empty? %>
        <%= error_messages("Warning!", "There have been some errors you need to fix.", @administrator) %>
    <% end %>
    <%= form_for @administrator, :html => { class: "form-signin", role: "form" } do  |form|  %>
      <%= form.email_field :email, class: "form-control", placeholder: "Email address" %>
      <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
      <%= form.password_field :confirmation, class: "form-control", placeholder: "Confirmation" %>
      <button class="btn btn-lg btn-default" type="submit">Create User</button>
    <% end %>
  </div>
<% end %>

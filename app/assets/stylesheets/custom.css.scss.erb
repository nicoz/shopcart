$grayMediumLight: #eaeaea;

@mixin box_sizing {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}


.marketing {
  margin-bottom: 10px
}

.navbar {
  min-height: 50px;
}

.navbar-brand {
  padding: 0 30px 0 15px;
}



/* miscellaneous */

.debug_dump {
  clear: both;
  float: left;
  width: 100%;
  margin-top: 45px;
  @include box_sizing;
}

.price-tag {
  float: right;
  margin-top: -40px;
  
  width: 150px;
  height: 150px;
  
  background: url(<%= asset_path 'price_tag.png' %>) no-repeat center;
  background-size:  150px 150px;
}

.price-tag .price {
  transform:rotate(50deg);
  -ms-transform:rotate(50deg); /* IE 9 */
  -webkit-transform:rotate(50deg); /* Opera, Chrome, and Safari */
  color: white;
  font-weight: bold;
  font-size: 1.4em;
  position: relative;
  top: 105px;
  left: 35px;
}

.marketing {
  min-height: 100%;
  height: auto !important;
  height: 100%;
  margin: 0 auto 30px;
}

iframe[src^="https://apis.google.com/u/0/_/widget/oauthflow/toast"] {display: none;}
